{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		":semanticCommits",
		"docker:pinDigests",
		"group:allNonMajor",
		"group:linters",
		"helpers:pinGitHubActionDigests",
		"security:openssf-scorecard"
	],
	"labels": [
		"meta: dependencies"
	],
	"schedule": [
		"before 6am"
	],
	"timezone": "Asia/Jakarta",
	"packageRules": [
		{
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"matchCurrentVersion": "!/^0/",
			"automerge": true
		},
		{
			"matchPackageNames": [
				"drizzle-orm",
				"drizzle-kit",
				"pg",
				"@types/pg"
			],
			"groupName": "Database"
		},
		{
			"matchManagers": [
				"dockerfile",
				"docker-compose"
			],
			"groupName": "Docker"
		},
		{
			"matchManagers": [
				"github-actions"
			],
			"groupName": "CI/CD"
		}
	]
}